<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Capstone_TheDevelopers_MoneySplitter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <<item name="colorPrimary">@color/orange_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="style_white_button" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/orange_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/bg_round_white</item>

    </style>

    <style name="style_white_bold_text_large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="style_edt_text" parent="TextAppearance.AppCompat.Small">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/bg_round_transparent</item>

    </style>


</resources>